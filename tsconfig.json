{
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "noImplicitAny": true,
    "allowJs": false,
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "node",
    "paths": {},
    "resolveJsonModule": true,
    "rootDir": ".",
    "declaration": true,
    "importHelpers": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["ESNext"],
    "types": ["react"],
    "target": "ESNext",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"]
}
